rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Contact submissions - read/write via API only
    match /contact_submissions/{submissionId} {
      // Allow read/write only through server-side API
      allow read, write: if false; // Disable direct client access for security
    }
    
    // Audit logs - read only for admins
    match /audit_logs/{logId} {
      allow read: if false; // Admin only via server
      allow write: if false; // Server only
    }
    
    // DSAR requests - server only
    match /dsar_requests/{requestId} {
      allow read, write: if false;
    }
    
    // Data deletion logs - server only
    match /data_deletion_logs/{logId} {
      allow read, write: if false;
    }
    
    // Breach notifications - server only
    match /breach_notifications/{notificationId} {
      allow read, write: if false;
    }
  }
}
